---
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/unfuck/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link
      href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    <title>Unfuck - Brainfuck Interpreter</title>
  </head>
  <body>
    <header
      class="flex items-center justify-between px-8 py-4 border-b border-[#22322f]"
    >
      <a
        href="/unfuck"
        class="font-bold text-lg tracking-tight hover:text-primary transition-colors"
        >Unfuck</a
      >
      <nav class="flex gap-8 text-sm font-medium">
        <a
          href="/unfuck/documentation"
          class="hover:text-primary transition-colors">Documentation</a
        >
        <a href="/unfuck/examples" class="hover:text-primary transition-colors"
          >Examples</a
        >
      </nav>
    </header>
    <slot />
    <footer class="text-center pb-8">
      <a href="https://ore.codes" target="_blank" class="underline">&copy; ore.codes {new Date().getFullYear()}</a>
    </footer>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
